# ============================================================
# Campus Booking System - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=campus_booking
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (for booking notifications - use Gmail App Password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=Campus Booking System <noreply@campus.edu>

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Admin Registration Secret (optional security layer)
ADMIN_SECRET=admin_registration_secret_2024
